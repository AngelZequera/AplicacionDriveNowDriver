<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ProfileActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/green"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PERFIL DE USUARIO"
            android:textAlignment="center"
            android:textColor="@color/grey_dark"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginTop="30dp"/>

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_back"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgProfile"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="45dp"
            android:src="@drawable/ic_person"
            app:civ_border_width="3dp"
            app:civ_border_color="@color/white"
            android:layout_gravity="bottom|center"
            />

        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="correo electronico"
            android:textColor="@color/grey_dark"
            android:textStyle="italic"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="250dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            style="@style/EditTextGrey"
            app:hintTextColor="@color/grey_dark"
            app:startIconDrawable="@drawable/ic_little_person"
            app:startIconTint="@color/grey_dark">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtFieldNombre"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Nombre"
                android:inputType="text"
                android:textColorHint="@color/grey_dark"
                android:textColor="@color/grey_dark"
                android:textSize="13sp" />


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="5dp"
            style="@style/EditTextGrey"
            app:hintTextColor="@color/grey_dark"
            app:startIconDrawable="@drawable/ic_little_person_outline"
            app:startIconTint="@color/grey_dark">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtFieldApellido"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Apellido"
                android:inputType="text"
                android:textColorHint="@color/grey_dark"
                android:textColor="@color/grey_dark"
                android:textSize="13sp" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="5dp"
            style="@style/EditTextGrey"
            app:hintTextColor="@color/grey_dark"
            app:startIconDrawable="@drawable/ic_phone_white"
            app:startIconTint="@color/grey_dark">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtFieldTelefono"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Telefono"
                android:textColorHint="@color/grey_dark"
                android:maxLength="10"
                android:inputType="phone"
                android:textColor="@color/grey_dark"
                android:textSize="13sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="5dp"
            style="@style/EditTextGrey"
            app:hintTextColor="@color/grey_dark"
            app:startIconDrawable="@drawable/ic_car"
            app:startIconTint="@color/grey_dark">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtFieldCarBrand"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Marca del auto"
                android:inputType="text"
                android:textColorHint="@color/grey_dark"
                android:textColor="@color/grey_dark"
                android:textSize="13sp" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="5dp"
            style="@style/EditTextGrey"
            app:hintTextColor="@color/grey_dark"
            app:startIconDrawable="@drawable/ic_color"
            app:startIconTint="@color/grey_dark">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtFieldCarColor"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Color del auto"
                android:inputType="text"
                android:textColorHint="@color/grey_dark"
                android:textColor="@color/grey_dark"
                android:textSize="13sp" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="5dp"
            style="@style/EditTextGrey"
            app:hintTextColor="@color/grey_dark"
            app:startIconDrawable="@drawable/ic_number"
            app:startIconTint="@color/grey_dark">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtFieldCarPlate"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Placa del auto"
                android:inputType="text"
                android:textColorHint="@color/grey_dark"
                android:textColor="@color/grey_dark"
                android:textSize="13sp" />

        </com.google.android.material.textfield.TextInputLayout>




    </LinearLayout>

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/rounder_button"
        android:text="ACTUALIZAR INFORMACIÃ“N"
        android:layout_gravity="bottom"

        />


</androidx.coordinatorlayout.widget.CoordinatorLayout>